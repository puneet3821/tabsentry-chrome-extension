{
  "manifest_version": 3,
  "name": "TabSentry",
  "version": "1.0",
  "description": "A Chrome extension to manage tabs and stay focused.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "logo.png"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  }
}
